<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.walmartlabs.concord.docker</groupId>
        <artifactId>parent</artifactId>
        <version>0.28.1-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>concord-agent</artifactId>
    <packaging>docker</packaging>

    <dependencies>
        <dependency>
            <groupId>com.walmartlabs.concord.agent</groupId>
            <artifactId>concord-agent</artifactId>
            <version>${project.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>copy-runner</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <artifactItems>
                        <artifactItem>
                            <groupId>com.walmartlabs.concord</groupId>
                            <artifactId>concord-runner</artifactId>
                            <version>${project.version}</version>
                            <classifier>jar-with-dependencies</classifier>
                            <destFileName>runner.jar</destFileName>
                        </artifactItem>
                    </artifactItems>
                    <outputDirectory>${project.basedir}/target/runner</outputDirectory>
                </configuration>
            </plugin>
            <plugin>
                <groupId>io.fabric8</groupId>
                <artifactId>docker-maven-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <skipRun>true</skipRun>
                    <images>
                        <image>
                            <name>walmartlabs/concord-agent-base:%v</name>
                            <alias>agent-base</alias>
                            <build>
                                <skip>${docker.skip}</skip>
                                <from>walmartlabs/concord-base</from>
                                <maintainer>${docker.maintainer}</maintainer>
                                <tags>
                                    <tag>latest</tag>
                                    <tag>${project.version}</tag>
                                </tags>
                                <optimise>true</optimise>
                                <runCmds>
                                    <run>yum -y install docker-client</run>
                                    <!-- for backwards compatibility with ansible projects w/o docker -->
                                    <run>yum -y install ansible openssh-clients sshpass util-linux</run>
                                    <run>yum clean all</run>
                                </runCmds>
                                <env>
                                    <DOCKER_HOST>tcp://dind:2375</DOCKER_HOST>
                                </env>
                            </build>
                        </image>
                        <image>
                            <name>walmartlabs/concord-agent:%v</name>
                            <alias>agent</alias>
                            <build>
                                <skip>${docker.skip}</skip>
                                <from>walmartlabs/concord-agent-base</from>
                                <maintainer>${docker.maintainer}</maintainer>
                                <tags>
                                    <tag>latest</tag>
                                    <tag>${project.version}</tag>
                                </tags>
                                <optimise>true</optimise>
                                <entryPoint>
                                    <shell>${concord.baseDir}/agent/start.sh</shell>
                                </entryPoint>
                                <assembly>
                                    <mode>dir</mode>
                                    <basedir>${concord.baseDir}/agent</basedir>
                                    <descriptor>assembly.xml</descriptor>
                                </assembly>
                            </build>
                        </image>
                    </images>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
