<runtime>
    <archive name="${project.artifactId}-${project.version}.tar.gz"/>

    <artifactSet to="/bin">
        <artifact id="io.airlift:launcher:tar.gz:bin:${launcher.version}">
            <unpack/>
        </artifact>
        <artifact id="io.airlift:launcher:tar.gz:properties:${launcher.version}">
            <unpack filter="true"/>
        </artifact>
    </artifactSet>

    <fileSet to="/etc">
        <directory path="${basedir}/src/main/etc"/>
    </fileSet>

    <artifactSet to="/lib" ref="runtime.classpath"/>

    <artifactSet to="/runner">
        <artifact id="com.walmartlabs.concord:concord-runner:jar:jar-with-dependencies:${project.version}">
            <exclusion id="*:*"/>
        </artifact>
    </artifactSet>
</runtime>
