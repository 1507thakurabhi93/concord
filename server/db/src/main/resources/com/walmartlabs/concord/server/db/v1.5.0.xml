<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.3.xsd">

    <changeSet id="150000" author="muhammad.amir@walmart.com">
        <addColumn tableName="REPOSITORIES">
            <column name="META" type="jsonb">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="150100" author="ibodrov@gmail.com">
        <createTable tableName="REMEMBER_ME_COOKIES">
            <column name="COOKIE_HASH" type="bytea">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="SESSION_DATA" type="bytea">
                <constraints nullable="false"/>
            </column>
            <column name="CREATED_AT" type="timestamp" defaultValueComputed="current_timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="REMEMBER_ME_COOKIES" indexName="IDX_R_ME_AGE">
            <column name="CREATED_AT"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
